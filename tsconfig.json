{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "api/dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "api/src/types/*"
            ]
        }
    },
    "include": [
        "api/src/**/*"
    ]
}